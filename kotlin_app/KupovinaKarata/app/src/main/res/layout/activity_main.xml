<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

        <TextView
                android:textSize="22sp"
                android:textColor="#673AB7"
                android:text="Okružna fudbalska liga Srbije"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="64dp"/>
        <TextView
                android:textSize="18sp"
                android:textColor="#673AB7"
                android:text="Rezervacija ulaznica"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="64dp"/>

        <ImageView
                android:id="@+id/lopta"
                android:src="@drawable/lopta"
                android:layout_width="match_parent"
                android:layout_height="170dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/dalje_tekst"
                android:textSize="15sp"
                android:textColor="#673AB7"
                android:text="Ako ne želite da se registrujete kliknite ovde!"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:id="@+id/nastavi"
                android:text="Nastavi dalje!"
                android:background="#431F63"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="#431F63"/>
        <TextView android:layout_width="wrap_content" android:layout_height="match_parent"/>
        <TextView

                android:id="@+id/dalje_login"
                android:textSize="15sp"
                android:textColor="#673AB7"
                android:text="Ako želite da se registrujete"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/dalje_loginlogin"
                android:textSize="15sp"
                android:textColor="#673AB7"
                android:text="i ako imate nalog kliknete ovde"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:id="@+id/login_dugme"
                android:text="Login"
                android:textSize="20sp"
                android:background="#431F63"
                android:textColor="@android:color/white"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="#431F63"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>