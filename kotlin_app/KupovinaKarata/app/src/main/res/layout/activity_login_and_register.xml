<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginAndRegister"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:tint="#6F000000"
                                android:src="@drawable/teren"/>
                        <TextView
                                android:id="@+id/txt_create_acc"
                                android:text="+KREIRAJTE NALOG"
                                android:textSize="20sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:layout_margin="40dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:text="OKRUÅ½NA FUDBALSKA LIGA SRBIJE"
                                android:textSize="18sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:layout_margin="115dp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="103dp"/>
                </FrameLayout>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/email_polje"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_iconRight="@drawable/ic_email"
                        app:met_primaryColor="@color/textColor"
                        app:met_baseColor="@color/textColor"
                        app:met_textColorHint="@color/textColor"
                        app:met_iconPadding="0dp"
                />
                <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_password"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:met_iconRight="@drawable/ic_password"
                        app:met_primaryColor="@color/textColor"
                        app:met_baseColor="@color/textColor"
                        app:met_textColorHint="@color/textColor"
                        app:met_iconPadding="0dp"
                />
        </LinearLayout>

        <Button
                android:id="@+id/login_button"
                android:text="LOGIN"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:background="#431F63"
                android:layout_margin="16dp"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

</LinearLayout>